{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-3.5-turbo"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 24,
  "buffer_line_height": "comfortable",
  "buffer_font_family": "FiraCode Nerd Font",
  "load_direnv": "shell_hook",
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark Hard"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "ensure_final_newline_on_save": false,
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font",
    "font_size": 18
  }
}
